<script>
    const carouselWrapper = document.querySelector('.icon-carousel-wrapper');
const icons = document.querySelectorAll('.icon-carousel-wrapper a');
let currentIndex = 0;
const totalIcons = icons.length;

function rotateCarousel() {
  const visibleIcons = getVisibleIconsCount();
  currentIndex = (currentIndex + 1) % totalIcons;
  
  if (currentIndex + visibleIcons > totalIcons) {
    currentIndex = 0; // Reset to the start to loop smoothly
  }
  
  const iconWidth = icons[0].offsetWidth + (parseFloat(getComputedStyle(icons[0]).marginRight) * 2);
  const offset = -currentIndex * (iconWidth * 3);
  carouselWrapper.style.transform = `translateX(${offset}px)`;
}

// Function to determine how many icons should be visible
function getVisibleIconsCount() {
  const width = window.innerWidth;
  if (width >= 1024) {
    return 5;
  } else if (width >= 768) {
    return 4;
  } else {
    return 3;
  }
}

setInterval(rotateCarousel, 2000); // Rotate every 8 seconds

// Optional: Recalculate and reset on window resize
window.addEventListener('resize', () => {
    currentIndex = 0;
    rotateCarousel();
});
</script>
